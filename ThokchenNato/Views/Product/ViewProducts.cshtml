<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
@model ThokchenNato.Models.ViewModels.ProductVM

@{
    ViewBag.Title = "ViewAll";
}

<h3 style="text-align:center;">Product List</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount_Unit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhotoURL)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Products)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount_Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <img src="@Url.Content(item.PhotoURL)" style="margin:10px" height="50" width="50" id="imagePreview" />
            </td>
            <td>
                <a href="https://eksheba.gov.bd/service/?id=BDGS-1530429859" class="btn btn-primary btn-sm" name="Name">Compalin</a>

            </td>
        </tr>
    }

</table>
